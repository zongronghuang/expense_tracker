<div class="mx-auto w-25">
  <form action="/records" method="GET">
    <label for="category"></label>
    <select class="form-control" name="category" id="category" onchange="this.form.submit()">
      <option value="all" {{#if all}} selected {{/if}}>全部</option>
      <option value="home" {{#if home}} selected {{/if}}>家居物業</option>
      <option value="travel" {{#if travel}} selected {{/if}}>交通出行</option>
      <option value="fun" {{#if fun}} selected {{/if}}>休閒娛樂</option>
      <option value="food" {{#if food}} selected {{/if}}>餐飲食品</option>
      <option value="misc" {{#if misc}} selected {{/if}}>其他</option>
    </select>
  </form>
</div>

<div class="text-center mt-5 mb-3 d-flex justify-content-center">
  <div>
    <span>總金額：</span>
    <span class="display-4">{{{subtotal}}}/{{{total}}}</span>
  </div>

  <div class="ml-5">
    <span>比例：</span>
    <span class="display-4">{{{percentage}}}%</span>
  </div>

</div>

{{! 清單}}
<ul class="list-group w-75 mx-auto mb-5">
  {{#each records}}
    <li class="list-group-item mx-auto w-75 d-flex justify-content-between align-items-center">

      {{#if home}}
        <i class="fas fa-home"></i>
      {{/if}}

      {{#if travel}}
        <i class="fas fa-shuttle-van"></i>
      {{/if}}

      {{#if fun}}
        <i class="fas fa-grin-beam"></i>
      {{/if}}

      {{#if food}}
        <i class="fas fa-utensils"></i>
      {{/if}}

      {{#if misc}}
        <i class="fas fa-pen"></i>
      {{/if}}

      <span class="w-25">{{this.name}}</span>
      <span>{{this.amount}}</span>
      <div class="d-flex">
        <a class="btn btn-primary" href="/records/{{{this._id}}}/edit">Edit</a>
        <form action="/records/{{{this._id}}}/delete?_method=DELETE" method="POST">
          <button class="btn btn-danger ml-3" type="submit">Delete</a>
        </form>
      </div>
    </li>
  {{/each}}

</ul>


<div class="text-center">
  <form action="/records/new" method="GET" class="mx-auto">
    <button type="submit" class="btn btn-primary">新增支出</button>
  </form>
</div>